<div class="repository">
  <p class="name">
    <%= link_to repository.profile.name, repository.profile %>
    /
    <%= link_to repository.name, [repository.profile, repository] %>
  </p>
  <dl class="metadata">
    <dt>
      Web
    </dt>
    <dd>
      <%= link_to profile_repository_url(repository.profile, repository) %>
    </dd>
    <dt>
      git+ssh
    </dt>
    <dd>
      <%= repository.ssh_uri %>
    </dd>
  </dl>
</div>
