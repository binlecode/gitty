<div class="repository_blob">
<p class="metadata">
  <span class="type">
    <%= blob.mime_type %>
  </span>
  <span class="size">
    <%= number_to_human_size blob.size %>
  </span>
  <span class="actions">
    <%= link_to 'Download', raw_blob_path(blob_reference, blob_path) %>
  </span>
</p>

<section class="contents">
<%= marked_up_blob blob, blob_path %>
</section>

</div>
