<li>
  <span class="author">
    <%= link_to_profile feed_item.author %>
  </span>
<% case feed_item.verb %>
<% when 'new_repository' %>
  created repository
  <span class="target">
  <% if feed_item.target %>
    <%= link_to_repository feed_item.target %>
  <% else %>
    <%= feed_item.data[:profile_name]%>/<%= feed_item.data[:repository_name] %>  
  <% end %>
  </span>
<% when 'del_repository' %>
  deleted repository
  <span class="target">
    <%= feed_item.data[:profile_name]%>/<%= feed_item.data[:repository_name] %>
  </span>
<% end %>
  <span class="time">
    <%= time_ago_in_words(feed_item.created_at, true) %> ago
  </span>
</li>
