<%= form_for(@profile, :url => (@original_profile || @profile)) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :placeholder => 'unix_name' %>
  </div>
  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_field :display_name, :placeholder => 'Your Full Name' %>
  </div>
  <div class="field">
    <%= f.label :display_email, 'Display email' %>
    <br />
    <%= f.email_field :display_email,
                      :placeholder => 'your_gravatar@something.com' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
