<h2 class="profile">
  <p class="name">
    <%= profile_image profile %>
    <%= link_to profile.name, profile %>
    <span class="display_name">
      (<%= profile.display_name %>)
    </span>
  </p>
</h2>
<dl class="metadata">
  <dt>Email:</dt>
  <dd><%= profile.display_email %></dd>
<% if profile.blog %>
  <dt>Blog:</dt>
  <dd><%= profile.blog %></dd>
<% end %>
<% if profile.company %>
  <dt>Company:</dt>
  <dd><%= profile.company %></dd>
<% end %>
<% if profile.city %>
  <dt>City:</dt>
  <dd><%= profile.city %></dd>
<% end %>
<% if profile.language %>      
  <dt>Favorite Programming Language:</dt>
  <dd><%= profile.language %></dd>
<% end %>
<% if profile.about %>
  <dt><%= profile_about_label(profile) %>:</dt>
  <dd><%= profile.about %></dd>
<% end %>
  <dt>Date joined:</dt>
  <dd><%= profile.created_at.strftime("%b %e, %Y") %></dd>
</dl>

<% if profile.can_edit?(current_user) %>
<p>
  <%= link_to 'Edit Profile', edit_profile_path %>
</p>
<% end %>
